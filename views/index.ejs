<body>
  <div class="header">
    <h1 class = "Main-text">
      Welcome to Virtual Room
    </h1>
    <p class="description">Watch YouTube videos with your friends in virtual room on sync</p>
    <p class="description">You can either create a room (by entering a random text in the input and click on the "New Room" button) <br> or join one below(if there's any room already created it will reflect the name of it with the "join" button below)</p>
  </div>
    <div id="room-container">
        <% Object.keys(rooms).forEach(room => { %>
            <div class="room-name"><%= room %></div>
            <a href="/<%= room %>" class="btn-room">Join</a>
            <%
        }) %>
    </div>
    <form class="input-room" action="/room" method="post">
        <input name="room" placeholder="Create Room" type="text" required>
        <button class="new-room-btn" type="submit">New Room</button>
    </form>
</body>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="https://cdn.socket.io/socket.io-3.0.1.min.js"></script>

<script>
    const roomContainer = document.getElementById("room-container")

    
    socket.on('room-created', room => {
    const roomElement = document.createElement('div')
    roomElement.innerText = room
    const roomLink = document.createElement('a')
    roomLink.href = `/${room}`
    roomLink.innerText = 'Join'
    roomContainer.append(roomElement)
    roomContainer.append(roomLink)
  })
</script>
</html>